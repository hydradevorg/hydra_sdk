cat > "${TEST_PAGE}" << EOF
<!DOCTYPE html>
<html>
<head>
  <title>Hydra WASM Test</title>
  <style>
    body { font-family: sans-serif; margin: 20px; }
    .module { margin: 20px 0; padding: 15px; border: 1px solid #ccc; border-radius: 5px; }
